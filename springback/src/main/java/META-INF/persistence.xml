<?xml version="1.0"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="taomee" transaction-type="RESOURCE_LOCAL" value="classpath:/META-INF/persistence.xml">

        <properties>
            <property name="hibernate.dialect" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.driver_class" value="org.gjt.mm.mysqlDriver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="pwd@60"/>
            <property name="hibernate.connection.url"
                      value="jdbc.mysql://10.1.1.60:3306/db_td_config"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

        </properties>

    </persistence-unit>
</persistence>